<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60pt"
        android:layout_marginTop="30pt"
        android:drawableLeft="@drawable/search_line"
        android:drawablePadding="10pt"
        android:gravity="center"
        android:text="历史记录"
        android:textColor="@android:color/white"
        android:textSize="24pt"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tv.leanback.HorizontalGridView
            android:id="@+id/mGridView"
            android:layout_width="match_parent"
            android:layout_height="60pt"
            android:layout_marginTop="80pt"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingLeft="30pt"
            android:paddingRight="30pt" />

        <com.tv.widget.NoScrollViewPager
            android:id="@+id/mViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>