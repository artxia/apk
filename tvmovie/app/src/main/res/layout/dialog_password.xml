<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/model_dialog_bg"
    android:orientation="vertical"
    android:padding="30pt">

    <EditText
        android:id="@+id/etOPassword"
        android:layout_width="300pt"
        android:layout_height="40pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10pt"
        android:background="@drawable/password_shape"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="10pt"
        android:paddingRight="10pt"
        android:textColor="@android:color/black"
        android:textSize="20pt" />

    <EditText
        android:id="@+id/etNPassword"
        android:layout_width="300pt"
        android:layout_height="40pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10pt"
        android:background="@drawable/password_shape"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="输入8位密码"
        android:inputType="textPassword"
        android:maxLength="8"
        android:paddingLeft="10pt"
        android:paddingRight="10pt"
        android:textColor="@android:color/black"
        android:textSize="20pt" />

    <EditText
        android:id="@+id/etCPassword"
        android:layout_width="300pt"
        android:layout_height="40pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10pt"
        android:background="@drawable/password_shape"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="再次输入8位密码"
        android:inputType="textPassword"
        android:maxLength="8"
        android:paddingLeft="10pt"
        android:paddingRight="10pt"
        android:textColor="@android:color/black"
        android:textSize="20pt" />

    <LinearLayout
        android:layout_width="300pt"
        android:layout_height="40pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="120pt"
            android:layout_height="40pt"
            android:background="@drawable/splash_focus"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/black"
            android:textSize="18pt" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="120pt"
            android:layout_height="40pt"
            android:background="@drawable/splash_focus"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/black"
            android:textSize="18pt" />
    </LinearLayout>
</LinearLayout>