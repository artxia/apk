<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/mX5WebView"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/mProgressBar"
            android:layout_width="60pt"
            android:layout_height="60pt"
            android:layout_gravity="center"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/data_loading"
            android:indeterminateOnly="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50pt"
            android:text="资源解析中，请稍后"
            android:textColor="@android:color/white"
            android:textSize="30pt" />
    </LinearLayout>

    <com.tv.leanback.VerticalGridView
        android:id="@+id/mGridView"
        android:layout_width="match_parent"
        android:layout_height="190pt"
        android:layout_gravity="bottom"
        android:layout_marginLeft="100pt"
        android:layout_marginRight="100pt"
        android:layout_marginBottom="30pt" />
</FrameLayout>