<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/share_loading_page_bg"
    android:layout_height="match_parent"
    tools:context=".HomeRootActivity">



    <com.owen.tab.TvTabLayout
        android:id="@+id/home_tab_layout"
        android:layout_width="520pt"
        android:layout_height="40pt"
        android:layout_marginTop="20pt"
        android:background="#00272727"
        app:tabIndicatorResId="@drawable/zx_p1_light"
        app:tabIndicatorGravity="bottom"
        android:layout_centerHorizontal="true"
        app:tabIndicatorHeight="4pt"
        app:tabIndicatorWidth="100pt"
        app:tabGravity="center"
        app:tabTexSize="22pt"
        app:tabTextColor="@drawable/selector_tab_font_color"
        app:tabMinWidth="150pt"
        app:tabIndicatorBackgroundHeight="50pt"
        app:tabScrollMode="fixed"/>

    <FrameLayout
        android:layout_below="@+id/home_tab_layout"
        android:id="@+id/home_tab_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>